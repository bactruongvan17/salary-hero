doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Work Logs
    script(src="https://unpkg.com/vue@3/dist/vue.global.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js")
    link(rel="stylesheet", href="/static/css/style.css")
  body
    header
        h1 Work Logs
    main(id="app")
        div(style="margin-bottom: 10px;")
            label(for="year" style="width: 150px;display: inline-block;") Filter by Year:
            select(id="year" v-model="currentYear")
                option(value="2024") 2024
                option(value="2023") 2023

        div         
            label(for="month" style="width: 150px;display: inline-block;") Filter by Month:
            select(id="month" v-model="currentMonth")
                option(value="1") January
                option(value="2") February
                option(value="3") March
                option(value="4") April 
                option(value="5") May
                option(value="6") June
                option(value="7") July
                option(value="8") August 
                option(value="9") September 
                option(value="10") Otober 
                option(value="11") November 
                option(value="12") December 

        br
        br

        div(id="work-logs")
            table
                thead
                    tr
                    th(style="width: 50px;text-align: center;") #
                    th Date
                    th Workday
                tbody
                    //- Sample table rows, replace with actual data
                    tr(v-for="(item, idx) in workLogs" :key="day")
                        td(style="width: 50px;text-align: center;") {{ idx + 1 }}
                        td {{ item.date }}
                        td {{ item.workDay }}
            div(id="employee-balance" v-if="employee")
                p Employee: 
                    strong {{ employee.name }}
                p Employee Type: 
                    strong {{ employee.type === 'monthly' ? 'Monthly Worker' : 'Daily Worker' }}
                p Salary/Rate: 
                    strong {{ Number(employee.salary).toLocaleString('en-US', { style: 'currency', currency: employee.currency || 'USD' }) }}
                p Standard Working Day: 
                    strong {{ standardWorkingDays }}
                p Actual Workday: 
                    strong {{ actualWorkingDays }}
                p Balance: 
                    strong {{ Number(balance).toLocaleString('en-US', { style: 'currency', currency: employee.currency || 'USD' }) }}
    script(src="/static/js/work-log.js")
